#!/bin/sh
RED="\033[31m"
POWDER_BLUE="\033[1;36m" #with bold
BLUE="\033[34m"
NORMAL="\033[0m"
WHITE="\033[97m"
LIGHTGREY="\033[90m"

printf "                   ${RED} ##       ${LIGHTGREY} .         \n"
printf "             ${RED} ## ## ##      ${LIGHTGREY} ==         \n"
printf "           ${RED}## ## ## ##      ${LIGHTGREY}===         \n"
printf "       /\"\"\"\"\"\"\"\"\"\"\"\"\"\"\"\"\\\___/ ===       \n"
printf "  ${BLUE}~~~ ${LIGHTGREY}{${BLUE}~~ ~~~~ ~~~ ~~~~ ~~ ~ ${LIGHTGREY}/  ===- ${BLUE}~~~${LIGHTGREY}\n"
printf "       \\\______${WHITE} o ${LIGHTGREY}         __/           \n"
printf "         \\\    \\\        __/            \n"
printf "          \\\____\\\______/               \n"
printf "${POWDER_BLUE}                                          \n"
printf "          |          |                    \n"
printf "       __ |  __   __ | _  __   _          \n"
printf "      /  \\\| /  \\\ /   |/  / _\\\ |     \n"
printf "      \\\__/| \\\__/ \\\__ |\\\_ \\\__  | \n"
printf " ${NORMAL}                                         \n"
printf "===========================================\n"
